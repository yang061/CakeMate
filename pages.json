{
	// 配置后可以批量引入uview样式
	"easycom": {
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		}
        ,{
            "path" : "pages/food/food",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "食物",
                "enablePullDownRefresh": false
            }         
        }
        ,{
            "path" : "pages/cake/cake",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "蛋糕",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/bread/bread",
            "style":                   
            {
                "navigationBarTitleText": "面包",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/my/my",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人中心",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/home/home",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false,
				// 自定义顶部
				"navigationStyle": "custom"
            }
            
        }
        ,{
            "path" : "pages/home/banner-ad",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/collect-data/collect-data",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"tabBar": {
		"color": "#d8d8d8",
		"selectedColor": "#444",
		"list": [
			{
				"text": "首页",
				// 绑定页面
				"pagePath": "pages/index/index"
			},
			{
				"text": "蛋糕",
				"pagePath": "pages/cake/cake"
				
			},
			{
				"text": "个人中心",
				"pagePath": "pages/my/my"
			},{
				"text": "主页",
				"pagePath": "pages/home/home"
			},
			{
				"text": "转录",
				"pagePath": "pages/collect-data/collect-data"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#f1f1f1",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {}
}
